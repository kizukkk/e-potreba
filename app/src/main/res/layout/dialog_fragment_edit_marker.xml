<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_border_marker_card_info"
    android:orientation="vertical"
    android:padding="22dp">

    <TextView
        android:id="@+id/edit_marker_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_profle_edit_new_var"
        android:textAlignment="center"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/editValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/but_sub_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_profle_edit_new_change"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>