<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_border_marker_card_info"
    android:orientation="vertical"
    android:padding="22dp">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fixel_display_family"
        android:paddingBottom="5dp"
        android:text="@string/fragment_vote_title"
        android:textAlignment="center"
        android:textFontWeight="500"
        android:textSize="28sp" />

    <RatingBar
        android:id="@+id/rate_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="0" />

    <Button
        android:id="@+id/but_sub_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fixel_display_family"
        android:text="@string/fragment_vote_title_confirm"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>